<!DOCTYPE html>
<html>
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <style>
      <%= profile.style %>
    </style>
  </head>
  <body>
    <div class="bar">
      <%= h(subscription_title) %>
    </div>
    <h1>
      <a href="<%= url %>"><%= title %></a>
    </h1>
<% if author %>
    <div class="author">
      <%= h(author) %>
    </div>
<% end %>
<% if image %>
    <div class="image">
      <img src="<%= image %>">
    </div>
<% end %>
    <div class="content">
      <%= content %>
    </div>
<% if subscription_description %>
    <div class="bar">
      <%= h(subscription_description) %>
    </div>
<% end %>
  </body>
</html>